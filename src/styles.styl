html,
body
  height: 100%
  font-size: 100%
  margin: 0
  min-height: 100%

.container
  align-items: center
  display: flex
  flex-grow: 1
  flex-direction: column
  justify-content: center
  min-height: 100%
  font-size: calc(8vw + 8vh)

.button
  background-color: orange
  color: white
  display: inline-block
  font-family: "Open Sans"
  font-size: 1em 

  border: 0.0625em solid darken(orange, 32%)
  border-radius: 0.125em
  padding: 0.5em 1em

  &:hover
    background-color: darken(orange, 4%)
  
  &:active
    background-color: darken(orange, 8%)

